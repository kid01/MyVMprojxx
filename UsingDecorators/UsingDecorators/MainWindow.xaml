
<Window x:Class="UsingDecorators.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UsingDecorators"
        Height="300"
        Width="300">
    <Border BorderThickness="5 2 5 2"
            BorderBrush="red"
            CornerRadius="30">
        <Viewbox Margin="10">
    <Canvas Width="200"
            Height="200"
            Background="LightBlue">
        <Button Canvas.Left="50"
                Canvas.Top="125"
                Panel.ZIndex="100"
                Width="100"
                Height="35" />
        <Button Canvas.Right="25"
                Height="200"
                Width="35" />
        <Button Canvas.Bottom="5"
                Height="20"
                Width="75" />
    </Canvas>
        </Viewbox>
    </Border>
</Window>